- logo:
    icon: https://www.dfld.de/Basics/images/Logo-DFLD.svg

- greeting:
    text_size: xl
    text: Welcome to your DFLD BOX Dashboard

- resources:
    cpu: true
    memory: true
    disk: /

- openmeteo:
    label: "{{ (station_city != '') | ternary(station_city,'Mainz') }}"
    latitude: "{{ (station_lon != '0.0') | ternary(station_lon,'50.000000') }}"
    longitude: "{{ (station_lat != '0.0') | ternary(station_lat,'8.160000') }}"
    timezone: Europe/Berlin
    units: metric
    cache: 5 
    format: 
      maximumFractionDigits: 1

- search:
    provider: duckduckgo
    target: _self
